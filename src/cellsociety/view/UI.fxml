<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>

<?import javafx.scene.text.Text?>
<GridPane fx:id="masterLayout"
  fx:controller="cellsociety.view.CellularAutomatonView"
  xmlns:fx="http://javafx.com/fxml"
  alignment="CENTER" hgap="10" vgap="10"
  gridLinesVisible="false">
  <padding><Insets top="20" bottom="20" left="20" right="20"/></padding>

  <HBox GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="4"  alignment="CENTER">
    <Text fx:id="title">
      <font><Font name="Arial Black" size="36.0" /></font>
    </Text>
  </HBox>

  <HBox GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.rowSpan="3" >
    <GridPane fx:id="mainGrid"/>
  </HBox>

  <HBox GridPane.rowIndex="1" GridPane.columnIndex="1" alignment="CENTER">
    <Button text="%LoadFileButtonLabel" onAction="#loadFileClick"></Button>
  </HBox>

  <HBox GridPane.rowIndex="1" GridPane.columnIndex="2" alignment="CENTER" spacing="8">
    <Button fx:id="startResetButton" text="%StartButtonLabel"
      onAction="#startResetButtonClick"></Button>
    <Button fx:id="pauseResumeButton" text="%ResumeButtonLabel"
      onAction="#pauseResumeButtonClick"></Button>
    <Button text="%StepButtonLabel" onAction="#stepButtonClick"></Button>
  </HBox>

  <HBox GridPane.rowIndex="2" GridPane.columnIndex="1" alignment="TOP_CENTER">
    <Label text="%SpeedLabel"></Label>
  </HBox>

  <HBox GridPane.rowIndex="2" GridPane.columnIndex="2" alignment="CENTER">
    <Slider fx:id="speedSlider" min="1" max="5" value="3" blockIncrement="1" minorTickCount="0"
      majorTickUnit="1" snapToTicks="true" showTickLabels="true" showTickMarks="true"></Slider>
  </HBox>

  <HBox GridPane.rowIndex="2" GridPane.columnIndex="3" alignment="TOP_CENTER">
    <Button text="%ApplySpeedButtonLabel" onAction="#speedButtonClick" ></Button>
  </HBox>



</GridPane>