<?xml version="1.0" encoding="UTF-8" ?>
<simulation rules="fire">
  <meta>
    <title>Segregation 3</title>
    <author>Bill Guo</author>
    <description>1x9 grid, equal amounts, need 1.0</description>
  </meta>
  <grid type="rectangular" width="9" height="1" neighbors="8" wrapping="false">
    <gridrow>
      <gridcell>X</gridcell>
      <gridcell>O</gridcell>
      <gridcell>X</gridcell>
      <gridcell>OPEN</gridcell>
      <gridcell>OPEN</gridcell>
      <gridcell>OPEN</gridcell>
      <gridcell>O</gridcell>
      <gridcell>X</gridcell>
      <gridcell>O</gridcell>
    </gridrow>
  </grid>
  <cellstyle>
    <cellstate type="X"><r>255</r><g>0</g><b>0</b></cellstate>
    <cellstate type="O"><r>0</r><g>0</g><b>255</b></cellstate>
    <cellstate type="OPEN"><r>255</r><g>255</g><b>255</b></cellstate>
  </cellstyle>
  <config_parameters>
    <parameter name="neighborsNeeded" value="1.0"></parameter>
  </config_parameters>
</simulation>
